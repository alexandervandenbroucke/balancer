build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Balancer, Flow
  -- other-modules:       
  other-extensions:    GeneralizedNewtypeDeriving
  build-depends:       base >=4.8 && <4.9,
                       vector,
                       containers
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -O2

Test-Suite balancer-tests
  type:             exitcode-stdio-1.0
  main-is:          balancer-tests.hs
  build-depends:    base >= 4.8 && < 4.9,
                    hspec,
                    vector,
                    containers
  hs-source-dirs:   src, tests
  default-language: Haskell2010

Test-Suite flow-tests
  type:             exitcode-stdio-1.0
  main-is:          flow-tests.hs
  build-depends:    base >= 4.8 && < 4.9,
                    hspec,
                    vector,
                    containers
  hs-source-dirs:   src, tests
  default-language: Haskell2010

executable balancer-example
  main-is:          balancer-example.hs
  other-modules:    Balancer, Flow
  build-depends:    base >= 4.8 && < 4.9,
                    vector,
                    containers
  hs-source-dirs:   src
  default-language: Haskell2010
  ghc-options:      -O2